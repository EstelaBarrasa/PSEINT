
Funcion i<-ordenarNotas( arr, pos )
	definir i, k, aux como numero
	aux=0
	Para i<-0 Hasta pos-1 Con Paso 1 Hacer
		Para k<-i+1 Hasta pos-1 Con Paso 1 Hacer
			si arr[k]<arr[i] Entonces
				aux = arr[i]
				arr[i]=arr[k]
				arr[k]=aux
			FinSi
		Fin Para
	Fin Para
	
	Para i<-0 Hasta pos-1 Con Paso 1 Hacer
		mostrar arr[i]
	Fin Para
Fin Funcion


Funcion apro <- mostrarApro ( arr, pos )
	definir i , apro Como Entero
	apro=0
	Para i<-0 Hasta pos-1 Con Paso 1 Hacer
		Si arr[i]>=5 Entonces
			apro=apro+1
		Fin Si
	Fin Para
Fin Funcion

Funcion  med<- mediaNotas( arr, pos )
	definir med , i Como Real
	med = 0
	Para i<-0 Hasta pos-1 Con Paso 1 Hacer
		med = med + arr[i]
	Fin Para
	med = med / pos
Fin Funcion

Funcion  añadirNota ( arr, pos, nota )
	arr[pos]=nota
Fin Funcion




